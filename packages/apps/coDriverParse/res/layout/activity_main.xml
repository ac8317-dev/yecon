<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.baidu.che.codriver.parse.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contacts_fail" />

        <Button
            android:id="@+id/btn_set_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contacts_ready" />

        <Button
            android:id="@+id/btn_set_tts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contacts_tts" />

        <Button
            android:id="@+id/btn_set_bt_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_connect" />

        <Button
            android:id="@+id/btn_set_bt_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_dis_connect" />

        <Button
            android:id="@+id/btn_set_wakeup_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wakeup_enable" />

        <Button
            android:id="@+id/btn_set_wakeup_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wakeup_disable" />
    </LinearLayout>

</ScrollView>