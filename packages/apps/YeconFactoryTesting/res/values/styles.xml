<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextViewLabelTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/textview_default_padding_left</item>
        <item name="android:paddingRight">@dimen/textview_default_padding_right</item>
        <item name="android:textSize">@dimen/textview_default_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageViewTopLeftTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginLeft">@dimen/imageview_default_margin_left</item>
        <item name="android:layout_marginTop">@dimen/imageview_default_margin_top</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="ImageViewTopRightTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginRight">@dimen/imageview_default_margin_right</item>
        <item name="android:layout_marginTop">@dimen/imageview_default_margin_top</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="ImageViewBottomLeftTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|left</item>
        <item name="android:layout_marginLeft">@dimen/imageview_default_margin_left</item>
        <item name="android:layout_marginBottom">@dimen/imageview_default_margin_bottom</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

</resources>