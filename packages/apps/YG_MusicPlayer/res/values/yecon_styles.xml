<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="LeftBarDeviceBtnTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tv_press_color</item>
        <item name="android:textSize">@dimen/track_textview_textsize</item>
    </style>

    <style name="BottomBarBtnTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/tv_press_color</item>
        <item name="android:textSize">@dimen/bottom_bar_textview_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_tab_bg</item>
        <item name="android:drawablePadding">@dimen/bottom_bar_drawable_padding</item>
    </style>

    <style name="TrackTextViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/textview_ic_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/track_textview_textsize</item>
        <item name="android:paddingTop">@dimen/space_view_top_margin</item>
        <item name="android:paddingBottom">@dimen/space_view_top_margin</item>
    </style>

    <style name="TimeTextViewTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/time_textview_textsize</item>
        <item name="android:text">@string/music_default_duration_time</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@null</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:layout_marginTop">@dimen/listview_layout_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/listview_layout_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/listview_layout_margin_left</item>
        <item name="android:layout_marginRight">@dimen/listview_layout_margin_right</item>
        <item name="android:listSelector">@drawable/list_item_bg</item>
    </style>

    <style name="LayoutErrorTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LayoutScanTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center</item>
    </style>
	<!-- 拓先-->
	<style name="BottomBarTextStyle">
        <item name="android:textSize">@dimen/default_text2_size</item>
        <item name="android:textColor">@color/color_btn_state</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_control_btn_bg</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68.0px</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:drawablePadding">@dimen/bottom_bar_drawable_padding</item>
        <item name="android:layout_weight">1.0</item>
    </style>
</resources>