<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:layout_marginTop="9dp"
        android:gravity="bottom" >

        <Button
            android:id="@+id/btn_sound"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/bottombar_button_right_margin"
            android:background="@drawable/ic_bottombar_sound_bg"
            android:visibility="gone" />
<!-- 
        <ImageView
            android:id="@+id/iv_prompt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            /> -->

        <Button
            android:id="@+id/tv_prompt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="90dp"
            android:paddingRight="@dimen/bottombar_prompt_textview_padding"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/btn_clearall"
            android:textSize="@dimen/bottombar_textview_textsize" 
            android:background="@xml/bg_bottombar_textview_btdisconnect" />

        <!--
        android:background="#FF000000"
            android:layout_marginRight="@dimen/bottombar_button_right_margin"  -->
        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_bottombar_home_bg" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_bottombar_back_bg" />
    </LinearLayout>