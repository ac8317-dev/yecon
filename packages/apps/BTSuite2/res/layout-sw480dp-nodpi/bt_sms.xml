<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bt_background"
  android:orientation="vertical"
>
  <LinearLayout
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="horizontal"
  >	
  	<LinearLayout
	  	android:orientation="vertical"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
	  	android:layout_gravity="center"
	  	android:layout_marginLeft="20dp"
	>
	  <Button
      android:id="@+id/btn_pause"
      android:background="@drawable/btn_180_50_bg"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/bt_phonebook_pause_string" 
      android:textSize="28dp"
     />
	  <Button
      android:id="@+id/btn_synchronize"
      android:background="@drawable/btn_180_50_bg"
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:text="@string/bt_phonebook_syn_string" 
      android:textSize="28dp"
     />
     <Button
      android:id="@+id/btn_sms_readed"
      android:background="@drawable/btn_180_50_bg"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:text="@string/bt_sms_readed" 
      android:textSize="28dp"
     />
	 <Button 
	  android:id="@+id/btn_sms_unread"
	  android:background="@drawable/btn_180_50_bg"
  	  android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:layout_marginTop="6dp"
  	  android:text="@string/bt_sms_unread"
  	  android:textSize="28dp"
  	 />
  	 <Button 
  	  android:id="@+id/btn_sms_draft"
  	  android:background="@drawable/btn_180_50_bg"
  	  android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:layout_marginTop="6dp"
  	  android:text="@string/bt_sms_draft"
  	  android:textSize="28dp"
  	 />
  	 <Button 
  	  android:id="@+id/btn_sms_sented"
  	  android:background="@drawable/btn_180_50_bg"
  	  android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:layout_marginTop="6dp"
  	  android:text="@string/bt_sms_sented"
  	  android:textSize="28dp"
  	 />
  	 </LinearLayout>
          <ListView
          android:id="@+id/sms_listview"
          android:choiceMode="singleChoice"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_margin="28dp"
	      android:layout_weight="1"
	      android:divider="#5B5556"
	      android:dividerHeight="1dip"
	      android:fastScrollEnabled = "true"
          android:cacheColorHint="#00000000" >
          </ListView>
	</LinearLayout>
	
     <LinearLayout
            android:id="@+id/LinearLayout_download_sms"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center"
      >
      <ProgressBar
            android:id="@+id/progressbar_download_sms"
            android:indeterminateDrawable="@drawable/blue_progressbar"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"  />
       <TextView
            android:id="@+id/tv_download_sms_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:textColor = "#ffff0000"
        />
       </LinearLayout>
</FrameLayout>

