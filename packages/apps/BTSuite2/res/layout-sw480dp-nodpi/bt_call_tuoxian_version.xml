<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    >
    <com.tuoxianui.view.TopBar
	    android:id="@+id/topbar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    app:top_title="@string/dial_name"
	    />
    <RelativeLayout 
        android:layout_width="fill_parent"
	  	android:layout_height="0dp"
	  	android:layout_weight="1"
	    android:paddingTop="14dp"
        >
		<LinearLayout
		  	android:layout_width="match_parent"
		  	android:layout_height="match_parent"
		  	android:orientation="vertical"
		  	>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginLeft="40dp"
			    android:layout_marginTop="40dp"
			    >
			    <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        >
			        <LinearLayout 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal"
				        >
			        	<TextView 
			        	    android:id="@+id/btn_call_one"
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:text="@string/number_1"
			        	    style="@style/CallNumber"
			        	    />
			        	<TextView 
			        	    android:id="@+id/btn_call_two"
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:text="@string/number_2"
			        	    style="@style/CallNumber"
			        	    />
			        	<TextView 
			        	    android:id="@+id/btn_call_three"
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:text="@string/number_3"
			        	    style="@style/CallNumber"
			        	    />
			    	</LinearLayout>
			    	<LinearLayout 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal"
				        >
			        	<TextView 
			        	    android:id="@+id/btn_call_four"
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:text="@string/number_4"
			        	    style="@style/CallNumber"
			        	    />
			        	<TextView 
			        	    android:id="@+id/btn_call_five"
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:text="@string/number_5"
			        	    style="@style/CallNumber"
			        	    />
			        	<TextView 
			        	    android:id="@+id/btn_call_six"
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:text="@string/number_6"
			        	    style="@style/CallNumber"
			        	    />
			    	</LinearLayout>
			    	<LinearLayout 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal"
				        >
			        	<TextView 
			        	    android:id="@+id/btn_call_seven"
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:text="@string/number_7"
			        	    style="@style/CallNumber"
			        	    />
			        	<TextView 
			        	    android:id="@+id/btn_call_eight"
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:text="@string/number_8"
			        	    style="@style/CallNumber"
			        	    />
			        	<TextView
			        	    android:id="@+id/btn_call_nine"
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:text="@string/number_9"
			        	    style="@style/CallNumber"
			        	    />
			    	</LinearLayout>
			    	<LinearLayout 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal"
				        >
			        	<TextView
			        	    android:id="@+id/btn_call_asterisk"
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:text="@string/number_star"
			        	    style="@style/CallNumber"
			        	    />
			        	<TextView
			        	    android:id="@+id/btn_call_zero"
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:text="@string/number_0"
			        	    style="@style/CallNumber"
			        	    />
			        	<TextView 
			        	    android:id="@+id/btn_call_pound"
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:text="@string/number_sign"
			        	    style="@style/CallNumber"
			        	    />
			    	</LinearLayout>
			    </LinearLayout>
			    
			    <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginLeft="40dp"
			        >
			    	<LinearLayout 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal"
				        android:layout_gravity="center_horizontal"
				        >
				        <TextView
						  	android:id="@+id/text_call_info"
						  	android:layout_width="wrap_content"
						  	android:layout_height="wrap_content"
						  	android:background="@drawable/text_call_info_bg"
						  	android:singleLine="true"
						  	android:typeface="normal"
						  	android:textSize="28sp"
						  	android:textColor="#ffffff"
						  	android:gravity="left|center_vertical"
						  	android:paddingLeft="4dp"
						  	android:paddingRight="4dp"
						 />
				        <ImageButton 
				            android:id="@+id/btn_del_num"
				            android:contentDescription="@null"
			  				android:background="@drawable/selector_del_number"
					  		android:layout_width="wrap_content"
					  		android:layout_height="wrap_content"
					  		/>
			        </LinearLayout>
			        <LinearLayout 
				        android:layout_width="match_parent"
				        android:layout_height="124dp"
				        android:layout_gravity="center_horizontal"
				        android:orientation="vertical"
				        android:paddingTop="40dp"
				        >       
				       <TextView
			                android:id="@+id/bt_calling_phone_time"
			                android:layout_width="wrap_content"
			                android:layout_height="0dp"
			                android:layout_weight="1"
			                android:gravity="left"
			                android:singleLine="true"
			                android:textColor="#ffffff"
			                android:textSize="20sp" 
			                android:visibility="invisible"/>
				       <TextView
			                android:id="@+id/bt_calling_phone_name"
			                android:layout_width="match_parent"
			                android:layout_height="0dp"
			                android:layout_weight="1"
			                android:gravity="right"
			                android:singleLine="true"
			                android:textColor="#ffffff"
			                android:textSize="20sp"/>
			        </LinearLayout>
			        <LinearLayout 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal"
				        android:layout_gravity="center_horizontal"
				        >
				       <TextView
				           android:id="@+id/btn_call"
				           android:layout_width="wrap_content"
				           android:layout_height="wrap_content"
				           android:textColor="#fff"
				           android:textSize="32sp"
				           android:gravity="center"
				           android:background="@drawable/selector_call_btn_left"
				           android:text="@string/BtDialerLabel"
				           android:enabled="false"
				           android:visibility="visible"
				           />
				       <TextView
				           android:id="@+id/btn_hangup"
				           android:layout_width="wrap_content"
				           android:layout_height="wrap_content"
				           android:textColor="#fff"
				           android:textSize="32sp"
				           android:gravity="center"
				           android:background="@drawable/selector_call_btn_left2"
				           android:text="@string/str_bt_call_end"
				           android:enabled="true"
				           android:visibility="gone"
				           />
				       <TextView
				           android:id="@+id/bluetooth_pairing"
				           android:layout_width="wrap_content"
				           android:layout_height="wrap_content"
				           android:textColor="#fff"
				           android:textSize="32sp"
				           android:gravity="center"
				        	android:text="@string/call_bluetooth_pairing"
				           android:background="@drawable/selector_call_btn_right"
				           />
				       <TextView
				           android:id="@+id/btn_add"
				           android:layout_width="wrap_content"
				           android:layout_height="wrap_content"
				           android:textColor="#fff"
				           android:textSize="28sp"
				           android:visibility="gone"
				           />
			        </LinearLayout> 
			    </LinearLayout>
			</LinearLayout>
			<FrameLayout 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        >
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_gravity="bottom"
				    >
			        <TextView
			            android:id="@+id/btn_call_back"
				        style="@style/BottomBarTextStyle"
				        android:text="@string/back"
				        />
				    <TextView 
				        android:id="@+id/call_phone_book"
				        style="@style/BottomBarTextStyle"
				        android:text="@string/BtPhonebookLabel"
				        />
				    <TextView 
				        android:id="@+id/call_history"
				        style="@style/BottomBarTextStyle"
				        android:text="@string/BtCallHistoryLabel"
				        />
				    <TextView 
				        android:id="@+id/call_bt_music"
				        style="@style/BottomBarTextStyle"
					android:visibility="gone"
				        android:text="@string/BtMusicLabel"
				        />
				    <TextView 
				    	android:id="@+id/call_machine_name"
				        style="@style/BottomBarTextStyle"
					android:visibility="gone"
				        android:text="@string/machine_name"
				        />
				</LinearLayout>
			</FrameLayout>
		</LinearLayout>
		<FrameLayout
		    android:id="@+id/dialog_calling"
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    android:padding="4dp"
		    android:visibility="gone"
		    >
		<LinearLayout
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_gravity="center"
		    android:orientation="vertical"
		    android:background="@drawable/dialog_call_bg"
		    android:padding="4dp"
		    >
			<FrameLayout 
			    android:layout_height="0dp"
			    android:layout_width="match_parent"
			    android:layout_weight="1"
			    >
				<TextView 
				   	android:id="@+id/calling_name"
				    android:layout_marginTop="30dp"
			        android:textSize="@dimen/text_size_4"
			        android:textColor="@color/white"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:singleLine="true"
			        android:ellipsize="marquee"
			        android:layout_gravity="top"
				    />
				<TextView 
				   	android:id="@+id/calling_num"
				    android:layout_marginTop="70dp"
			        android:textSize="@dimen/text_size_4"
			        android:textColor="@color/white"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:singleLine="true"
			        android:ellipsize="marquee"
			        android:layout_gravity="top"
				    />
				<LinearLayout
				    android:layout_width="match_parent"
			        android:layout_height="wrap_content"
				    android:layout_marginBottom="20dp"
				    android:layout_gravity="bottom"
				    android:gravity="center"
				    >
				    <TextView 
				        android:id="@+id/calling_info"
				        android:textSize="@dimen/text_size_3"
				        android:textColor="@color/white"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/str_out_call_status"
				        />
				</LinearLayout>
			</FrameLayout>
			<ImageView 
			    android:id="@+id/calling_hangup"
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent"
			    android:background="@drawable/selector_call_outgoing_hangup"
			    />
		</LinearLayout>
		</FrameLayout>
		
		<FrameLayout
		    android:id="@+id/dialog_income_call"
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    android:padding="4dp"
		    android:visibility="gone"
		    >
		<LinearLayout
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_gravity="center"
		    android:orientation="horizontal"
		    android:padding="0dp"
		    >
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:gravity="center"
			    android:background="@drawable/income_answer_bg_l"
			    >
			    <ImageView
			        android:id="@+id/call_income_answer" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/selector_call_income_answer"
			        android:contentDescription="@string/str_bt_call_answer"
			        />
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:gravity="center_vertical"
			    android:background="@drawable/income_answer_bg_c"
			    >
			    <ImageView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/income_answer_bg_bt"
			        android:contentDescription="@null"
			        />
			    <LinearLayout 
			        android:layout_height="wrap_content"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:orientation="vertical"
			       
			        >
			        <TextView 
				        android:id="@+id/call_income_name"
				        android:layout_height="wrap_content"
				        android:layout_width="match_parent"
				        android:textSize="@dimen/text_size_3"
				        android:textColor="@color/white"
				        android:gravity="center"
				        android:ellipsize="marquee"
				        android:singleLine="true"
				        />
			        <TextView 
			            android:layout_marginTop="16dp"
				        android:id="@+id/call_income_num"
				        android:layout_height="wrap_content"
				        android:layout_width="match_parent"
				        android:layout_weight="1"
				        android:textSize="@dimen/text_size_3"
				        android:textColor="@color/white"
				        android:gravity="center"
				        android:ellipsize="marquee"
				        android:singleLine="true"
				        />
			    </LinearLayout>

			</LinearLayout>
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:gravity="center"
			    android:background="@drawable/income_answer_bg_r"
			    >
			    <ImageView 
			        android:id="@+id/call_income_hangup"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:contentDescription="@string/str_bt_call_end"
			        android:background="@drawable/selector_call_income_hangup"
			        />
			</LinearLayout>
		</LinearLayout>
		</FrameLayout>
    </RelativeLayout>
</LinearLayout>