<?xml version="1.0" encoding="utf-8"?>
<resources>


	<style name="Animations" />

	<!-- PopDownMenu -->
	<style name="Animations.PopDownMenu" />
	
	<style name="Animations.PopDownMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
	</style>
	
	<!-- PopUpMenu -->
	<style name="Animations.PopUpMenu" />
	
	<style name="Animations.PopUpMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
	</style>
	
	<style name= "phone_name_text" >
	    <item name= "android:ellipsize">end</item>
	    <item name= "android:singleLine">true</item>
	    <item name= "android:textColor">@android:color/white</item>
	    <item name= "android:textSize">32sp</item>
	</style>
	<style name= "phone_no_text" >
	    <item name= "android:ellipsize">marquee</item>
	    <item name= "android:marqueeRepeatLimit">marquee_forever</item>
	    <item name= "android:focusable">true</item>
	    <item name= "android:focusableInTouchMode">true</item>
	    <item name= "android:singleLine">true</item>
	    <item name= "android:textColor">@android:color/white</item>
	    <item name= "android:textSize">32sp</item>
	</style>
	<style name= "music_track_text" >
	    <item name= "android:ellipsize">marquee</item>
	    <item name= "android:marqueeRepeatLimit">marquee_forever</item>
	    <item name= "android:focusable">true</item>
	    <item name= "android:focusableInTouchMode">true</item>
	    <item name= "android:singleLine">true</item>
	    <item name= "android:textColor">@android:color/white</item>
	    <item name= "android:textSize">32sp</item>
	</style>
	<style name="NobackDialog" parent="@android:style/Theme.Dialog">
			<item name="android:windowFrame">@null</item>
			<item name="android:background">@android:color/transparent</item> 
         	<item name="android:windowBackground">@android:color/transparent</item>
         	<item name="android:windowNoTitle">true</item>
	</style>
	
	<style name="panel_input_text">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/selector_bt_panel</item>
    </style>
	<style name="panel_button_text">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/selector_bt_panel</item>
    </style>
    <style name="ListViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@color/black</item>
         <item name="android:dividerHeight">5dp</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>
    
    <style name="BottomBarTextStyle">
        <item name="android:textSize">@dimen/default_text2_size</item>
        <item name="android:textColor">@color/color_btn_state</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_control_btn_bg</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68.0px</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="CallNumber">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/color_btn_state</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_call_number</item>
    </style>
</resources>
