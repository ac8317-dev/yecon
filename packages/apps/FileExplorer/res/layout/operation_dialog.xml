<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:drawablePadding="0dip"
    android:ellipsize="marquee"
    android:fadingEdge="horizontal"
    android:gravity="top|center_horizontal"
    android:maxLines="2"
    android:paddingBottom="2dip"
    android:paddingLeft="2dip"
    android:paddingRight="2dip"
    android:paddingTop="5dip"
    android:textSize="13dip" >

    <ImageView
        android:id="@+id/view2"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginLeft="0dip"
        android:paddingBottom="10dip"
        android:src="@drawable/multi_files"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/view1"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginLeft="0dip"
        android:paddingBottom="10dip"
        android:src="@drawable/folder_dialog" />

    <ImageView
        android:id="@+id/view3"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dip"
        android:paddingBottom="10dip"
        android:src="@drawable/folder_dialog" />

    <TextView
        android:id="@+id/f_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_weight="1.0"
        android:paddingBottom="0dip"
        android:paddingLeft="10dip"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/f_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view1"
        android:layout_toRightOf="@+id/f_from"
        android:layout_weight="1.0"
        android:gravity="right"
        android:paddingBottom="0dip"
        android:paddingRight="10dip"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/f_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f_from"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:paddingLeft="10dip"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/operationPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f_from"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/f_title"
        android:layout_weight="1.0"
        android:paddingLeft="10dip"
        android:ellipsize="start"
        android:singleLine="true"
        android:textSize="18dip" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/f_title"
        android:paddingRight="10dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f_title"
        android:layout_toLeftOf="@+id/Button01"
        android:paddingRight="10dp" />

</RelativeLayout>