<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_wind_speed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_wind_speed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_wind_speed_item_margin"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/iv_wind_speed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_wind_speed_item_margin"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/iv_wind_speed3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_wind_speed_item_margin"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/iv_wind_speed4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_wind_speed_item_margin"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/iv_wind_speed5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_wind_speed_item_margin"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/iv_wind_speed6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_wind_speed_item_margin"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/iv_wind_speed7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:visibility="gone" />

</LinearLayout>