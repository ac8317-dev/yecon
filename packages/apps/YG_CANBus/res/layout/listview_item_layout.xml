<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_normal"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="@string/ac_ac"
        android:textColor="@color/white"
        android:textSize="@dimen/ac_textview_default_size" />

    <TextView
        android:id="@+id/tv_item_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical|right"
        android:text="@string/ac_ac"
        android:textColor="@color/white"
        android:textSize="@dimen/ac_textview_default_size" />

    <TextView
        android:id="@+id/tv_item_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/ci_textview_padding_top"
        android:text="@string/ac_ac"
        android:textColor="@color/white"
        android:textSize="@dimen/ac_textview_default_size" />

</LinearLayout>