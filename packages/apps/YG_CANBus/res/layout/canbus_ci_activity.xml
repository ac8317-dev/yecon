<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/appbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/layout_car_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/canbus_activity_default_padding"
        android:paddingTop="@dimen/canbus_activity_default_padding" >

        <LinearLayout
            android:layout_width="@dimen/canbus_tv_default_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_oil_left"
                style="@style/CITextViewTheme"
                android:drawableTop="@drawable/ci_oil_left_bg"
                android:text="@string/ci_oil_left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/horizontal_seperator_line" />

            <TextView
                android:id="@+id/tv_outdoor_temp"
                style="@style/CITextViewTheme"
                android:drawableTop="@drawable/ci_outdoor_temp"
                android:text="@string/ci_outdoor_temp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/horizontal_seperator_line" />

            <TextView
                android:id="@+id/tv_battery_voltage"
                style="@style/CITextViewTheme"
                android:drawableTop="@drawable/ci_bv_bg"
                android:text="@string/ci_battery_voltage" />
        </LinearLayout>

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/vertical_seperator_line" />

        <LinearLayout
            android:layout_width="@dimen/canbus_tv_default_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_seat_belts"
                style="@style/CITextViewTheme"
                android:drawableLeft="@drawable/ci_seat_belts_bg"
                android:text="@string/ci_seat_belts" />

            <TextView
                android:id="@+id/tv_rear_door_open"
                style="@style/CITextViewTheme"
                android:drawableLeft="@drawable/ci_rear_door_no_close"
                android:drawablePadding="@dimen/ci_textview_padding"
                android:text="@string/ci_rear_door" />

            <TextView
                android:id="@+id/tv_handbrake"
                style="@style/CITextViewTheme"
                android:drawableLeft="@drawable/ci_handbrake_bg"
                android:drawablePadding="@dimen/ci_textview_padding"
                android:text="@string/ci_handbrake" />

            <TextView
                android:id="@+id/tv_cleaning_fluid"
                style="@style/CITextViewTheme"
                android:drawableLeft="@drawable/ci_cf_bg"
                android:drawablePadding="@dimen/ci_textview_padding"
                android:text="@string/ci_cleaning_fluid" />
        </LinearLayout>

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/vertical_seperator_line" />

        <LinearLayout
            android:layout_width="@dimen/canbus_tv_default_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_engine_speed"
                style="@style/CITextViewTheme"
                android:drawableTop="@drawable/ci_engine_speed"
                android:text="@string/ci_engine_speed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/horizontal_seperator_line" />

            <TextView
                android:id="@+id/tv_traveling_speed"
                style="@style/CITextViewTheme"
                android:drawableTop="@drawable/ci_traveling_speed"
                android:text="@string/ci_traveling_speed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/horizontal_seperator_line" />

            <TextView
                android:id="@+id/tv_driven_distance"
                style="@style/CITextViewTheme"
                android:drawableTop="@drawable/ci_driven_distance"
                android:text="@string/ci_driven_distance" />
        </LinearLayout>

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/vertical_seperator_line" />

        <LinearLayout
            android:layout_width="@dimen/canbus_tv_default_width"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/canbus_tv_default_width"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/car_info_app_name"
                    android:src="@drawable/ci_car" />

                <ImageView
                    android:id="@+id/iv_left_front_door"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:contentDescription="@string/car_info_app_name"
                    android:src="@drawable/ci_left_front_door"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_right_front_door"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:contentDescription="@string/car_info_app_name"
                    android:src="@drawable/ci_right_front_door"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_left_back_door"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:contentDescription="@string/car_info_app_name"
                    android:src="@drawable/ci_left_back_door"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_right_back_door"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:contentDescription="@string/car_info_app_name"
                    android:src="@drawable/ci_right_back_door"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_fueling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:contentDescription="@string/car_info_app_name"
                    android:src="@drawable/ci_fueling"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_front_cover_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:contentDescription="@string/car_info_app_name"
                    android:src="@drawable/ci_front_cover_open"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_rear_door_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:contentDescription="@string/car_info_app_name"
                    android:src="@drawable/ci_rear_door_open"
                    android:visibility="gone" />
            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/canbus_tv_default_width"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/tv_door_open_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:background="@drawable/ci_warning_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/ci_textview_warning_padding_left"
                android:text="@string/ci_left_back_door_open"
                android:textColor="@color/white"
                android:textSize="@dimen/ci_textview_default_size" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/canbus_tv_default_width"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ib_car_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ci_car_info_bg"
                android:contentDescription="@string/app_name" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_all_car_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:drawSelectorOnTop="false"
        android:listSelector="@drawable/list_item_bg"
        android:visibility="gone" >
    </ListView>

</FrameLayout>