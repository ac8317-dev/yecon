<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/fragment_info_two_line_list_item"
        android:id="@+id/fragment_more_metadata_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />

    <include layout="@layout/fragment_info_two_line_list_item"
        android:id="@+id/fragment_more_metadata_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_more_metadata_duration"
        />

    <include layout="@layout/fragment_info_two_line_list_item"
        android:id="@+id/fragment_more_metadata_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_more_metadata_artist"
        />

</RelativeLayout>