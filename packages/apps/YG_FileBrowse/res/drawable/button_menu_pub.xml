<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:drawable="@drawable/menu_p" android:state_pressed="true"/>
    <!-- focused -->
    <item android:drawable="@drawable/menu_n" android:state_focused="true"/>
    <!-- selected -->
    <item android:drawable="@drawable/menu_p" android:state_selected="true"/>
    <!-- checked -->
    <item android:drawable="@drawable/menu_p" android:state_checked="true"/>
    <item android:drawable="@drawable/menu_p" android:state_activated="true"/>
    <!-- default -->
    <item android:drawable="@drawable/menu_n"/>

</selector>