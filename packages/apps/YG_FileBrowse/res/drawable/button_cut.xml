<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:drawable="@drawable/ctrl_cut_p" android:state_pressed="true"/>
    <!-- focused -->
    <item android:drawable="@drawable/ctrl_cut_n" android:state_focused="true"/>
    <!-- selected -->
    <item android:drawable="@drawable/ctrl_cut_p" android:state_selected="true"/>
