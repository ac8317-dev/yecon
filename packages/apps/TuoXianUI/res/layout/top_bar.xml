<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:background="@drawable/statusbar_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
     >
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:paddingLeft="20dp"
        android:layout_height="match_parent"
        >
        <TextView 
            android:id="@+id/top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
	    android:layout_marginLeft="@dimen/top_ic_margin_right"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_1"
            />
        </FrameLayout>
    <RelativeLayout
    	android:id="@+id/show_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#006f56f5"
        >
       	<TextClock
           android:id="@+id/date_text"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:textColor="#fff"
           android:textSize="@dimen/text_size_1"
           android:format12Hour="yyyy-MM-dd"
           android:format24Hour="yyyy-MM-dd"
           android:gravity="center"
           android:layout_alignParentLeft="true"
         />
        <TextClock
           android:id="@+id/time_text"
           android:layout_toRightOf="@id/date_text"
           android:layout_width="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_height="match_parent"
           android:gravity="center"
           android:textColor="#fff"
           android:textSize="@dimen/text_size_1"
           android:format12Hour="hh:mm aa"
           android:format24Hour="kk:mm"
         />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:background="#003ef3ef"
        android:orientation="horizontal"
        android:gravity="center|right"
        android:paddingEnd="20dp"
        >
        <ImageView
            android:id="@+id/top_ic_wifi_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_wifi_sel"
            android:scaleType="center"
            android:layout_marginRight="@dimen/top_ic_margin_right" 
            />
        <ImageView 
            android:id="@+id/top_ic_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_bluetooth"
            android:scaleType="center"
            android:layout_marginRight="@dimen/top_ic_margin_right"
            />
        <ImageView
            android:id="@+id/top_ic_usb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_usb"
            android:scaleType="center"
            android:layout_marginRight="@dimen/top_ic_margin_right" 
            />
        <ImageView 
            android:id="@+id/top_ic_return_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_return"
            android:scaleType="center"
            android:layout_marginRight="@dimen/top_ic_margin_right"
            />
    </LinearLayout>
	
</LinearLayout>
