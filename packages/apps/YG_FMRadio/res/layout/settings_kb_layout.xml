<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackground"
        android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
	<com.tuoxianui.view.TopBar
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    />
    <FrameLayout
        android:layout_marginTop="@dimen/space_layout_height"
	android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
    	android:id="@+id/kb_text"
	android:background="@drawable/kb_text_bg"
        android:textColor="@color/tv_press_color"
        android:textSize="@dimen/bottom_bar_textview_size"
	android:gravity="center_vertical"
	android:paddingLeft="10dp"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" />
    <TextView
    	android:id="@+id/kb_bs"
	android:layout_gravity="right|center_vertical"
	android:background="@drawable/selector_kb_bs"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" />
    </FrameLayout>
    
    <GridLayout 
        android:layout_marginTop="@dimen/space_layout_height"
	android:id="@+id/toolbar_setting"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:columnCount="3">
	    <TextView
	    	android:id="@+id/kb_1"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/selector_kb_bg"
	        android:textColor="@color/tv_press_color"
	        android:textSize="@dimen/loc_textview_textsize"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	    <TextView
	    	android:id="@+id/kb_2"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/selector_kb_bg"
	        android:textColor="@color/tv_press_color"
	        android:textSize="@dimen/loc_textview_textsize"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	    <TextView
	    	android:id="@+id/kb_3"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/selector_kb_bg"
	        android:textColor="@color/tv_press_color"
	        android:textSize="@dimen/loc_textview_textsize"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	    <TextView
	    	android:id="@+id/kb_4"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/selector_kb_bg"
	        android:textColor="@color/tv_press_color"
	        android:textSize="@dimen/loc_textview_textsize"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	    <TextView
	    	android:id="@+id/kb_5"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/selector_kb_bg"
	        android:textColor="@color/tv_press_color"
	        android:textSize="@dimen/loc_textview_textsize"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	    <TextView
	    	android:id="@+id/kb_6"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/selector_kb_bg"
	        android:textColor="@color/tv_press_color"
	        android:textSize="@dimen/loc_textview_textsize"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	    <TextView
	    	android:id="@+id/kb_7"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/selector_kb_bg"
	        android:textColor="@color/tv_press_color"
	        android:textSize="@dimen/loc_textview_textsize"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	    <TextView
	    	android:id="@+id/kb_8"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/selector_kb_bg"
	        android:textColor="@color/tv_press_color"
	        android:textSize="@dimen/loc_textview_textsize"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	    <TextView
	    	android:id="@+id/kb_9"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/selector_kb_bg"
	        android:textColor="@color/tv_press_color"
	        android:textSize="@dimen/loc_textview_textsize"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	    <TextView
	    	android:id="@+id/kb_dot"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/selector_kb_bg"
	        android:textColor="@color/tv_press_color"
	        android:textSize="@dimen/loc_textview_textsize"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	    <TextView
	    	android:id="@+id/kb_0"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/selector_kb_bg"
	        android:textColor="@color/tv_press_color"
	        android:textSize="@dimen/loc_textview_textsize"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	    <TextView
	    	android:id="@+id/kb_ok"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/selector_kb_bg"
	        android:textColor="@color/tv_press_color"
	        android:textSize="@dimen/loc_textview_textsize"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
    </GridLayout>
    </LinearLayout>
    	
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	       	android:layout_marginLeft="33dp"
	       	android:layout_marginRight="33dp"
        	android:layout_marginBottom="@dimen/control_btn_wrapper_margin_bottom"
	        android:background="#00fa76a7"
		android:layout_alignParentBottom="true"
	        android:orientation="horizontal"
	         >
		    <TextView
	            android:id="@+id/settings_kb_back"
	            style="@style/BottomBarBtnTheme"
	            android:contentDescription="@string/str_btn_back"
	            android:text="@string/str_btn_back" />
		    <TextView
		        android:layout_weight="4"
	            style="@style/BottomBarBtnTheme"
	            android:contentDescription="@null"
	            android:text="@string/str_btn_back"
	            android:visibility="invisible"
	             />
		   
		</LinearLayout>
</RelativeLayout>