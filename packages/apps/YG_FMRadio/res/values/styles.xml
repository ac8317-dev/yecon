<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="ListViewFastScrollThumb" parent="@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen">  
	     <item name="android:fastScrollThumbDrawable">@drawable/scroll_thumb</item>
	</style>

    <style name="FreqTitleTextViewTheme">
        <item name="android:textColor">@color/lightblue</item>
        <item name="android:textSize">@dimen/bottom_bar_textview_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomBarBtnTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">-2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/tv_press_color</item>
        <item name="android:textSize">@dimen/bottom_bar_textview_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_control_btn_bg</item>
        <item name="android:drawablePadding">@dimen/bottom_bar_drawable_padding</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="PreviewFreqTextViewTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_freq_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/fmr_default_freq</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/tv_freq_select_color</item>
        <item name="android:textSize">@dimen/pre_freq_textview_textsize</item>
    </style>

    <style name="FreqNumTextViewTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/fmr_freq_num0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/freq_num_textview_textsize</item>
    </style>

</resources>