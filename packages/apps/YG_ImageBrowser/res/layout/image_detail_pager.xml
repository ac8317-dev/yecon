<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.yecon.imagebrowser.HackyViewPager 
        android:id="@+id/pager" 
        android:background="@color/black" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" />
    <LinearLayout android:layout_gravity="top" 
        android:orientation="horizontal" 
        android:id="@+id/topBar" 
        android:background="@drawable/top_bar_bg" 
        android:paddingLeft="20.0dip" 
        android:paddingRight="20.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/fileName" 
            android:textSize="@dimen/default_text_size" 
            android:textColor="#ffffffff" 
            android:layout_gravity="left|center" 
            android:background="@color/transparent" 
            android:layout_width="0.0dip" 
            android:layout_height="wrap_content" 
            android:layout_weight="1.0" />
        <TextView 
            android:textSize="@dimen/default_text_size" 
            android:textColor="#ffffffff" 
            android:layout_gravity="right|center" 
            android:id="@+id/pageNo" 
            android:background="@color/transparent" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView 
        android:textSize="18.0sp" 
        android:textColor="@color/white" 
        android:gravity="center" 
        android:layout_gravity="bottom" 
        android:id="@+id/indicator" 
        android:background="@color/transparent" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="@string/viewpager_indicator" />
    <LinearLayout 
        android:gravity="center_vertical" 
        android:layout_gravity="bottom" 
        android:orientation="horizontal" 
        android:id="@+id/bottomBar" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:baselineAligned="true">
        <TextView 
            android:id="@+id/setwallpaper" 
            android:visibility="gone" 
            android:text="@string/str_btn_setwallpaper" 
            android:contentDescription="@string/str_btn_setwallpaper" 
            style="@style/BottomBarTextStyle" />
        <TextView 
            android:id="@+id/back" 
            android:text="@string/str_btn_back" 
            android:contentDescription="@string/str_btn_back" 
            style="@style/BottomBarTextStyle" />
        <TextView 
            android:id="@+id/prev" 
            android:text="@string/str_btn_pre" 
            android:contentDescription="@string/str_btn_pre" 
            style="@style/BottomBarTextStyle" />
        <TextView 
            android:id="@+id/play" 
            android:text="@string/str_btn_play" 
            android:contentDescription="@string/str_btn_play" 
            style="@style/BottomBarTextStyle" />
        <TextView 
            android:id="@+id/pause" 
            android:visibility="gone" 
            android:text="@string/str_btn_pause" 
            android:contentDescription="@string/str_btn_pause" 
            style="@style/BottomBarTextStyle" />
        <TextView 
            android:id="@+id/next" 
            android:text="@string/str_btn_next" 
            android:contentDescription="@string/str_btn_next" 
            style="@style/BottomBarTextStyle" />
        <TextView 
            android:id="@+id/rotate_left" 
            android:text="@string/str_btn_rotate_left" 
            android:contentDescription="@string/str_btn_rotate" 
            style="@style/BottomBarTextStyle" />
        <TextView 
            android:id="@+id/rotate_right" 
            android:text="@string/str_btn_rotate" 
            android:contentDescription="@string/str_btn_rotate" 
            style="@style/BottomBarTextStyle" />
    </LinearLayout>
</FrameLayout>