<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res/com.android.launcher"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    >
    <com.tuoxianui.view.TopBar
	    android:id="@+id/topbar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    app:top_title="@string/str_main_menu"
	    />
	<FrameLayout
	    android:id="@+id/tx_main"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    >
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#003e33e3"
	        android:orientation="vertical"
	        android:layout_marginTop="4dp"
	        >
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            >
	            <FrameLayout
	                android:id="@+id/app_radio"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/tx_app_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/seletor_app_radio"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/app_raido_name"
	                    style="@style/tx_app_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/app_music"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/tx_app_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/seletor_app_music"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/app_music_name"
	                    style="@style/tx_app_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/app_video"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/tx_app_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/seletor_app_video"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/app_video_name"
	                    style="@style/tx_app_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/app_photo"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/tx_app_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/seletor_app_photo"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/app_photo_name"
	                    style="@style/tx_app_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/app_bt_music"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/tx_app_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/seletor_app_bt_music"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/app_bt_music_name"
	                    style="@style/tx_app_text_style"
	                     />
	            </FrameLayout>
	            
	        </LinearLayout>
	        <View 
	            android:layout_height="@dimen/app_wrap_between_gap"
	            android:layout_width="match_parent"
	            ></View>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"  
	            android:orientation="horizontal"
	            >
	            <FrameLayout
	                android:id="@+id/app_bluetooth"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/tx_app_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/seletor_app_bluetooth"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/app_bluetooth_name"
	                    style="@style/tx_app_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/app_car_record"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/tx_app_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/seletor_app_car_record"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/app_car_record_name"
	                    style="@style/tx_app_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/app_phone_connect"
	                android:layout_height="match_parent"
			android:visibility="gone"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/tx_app_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/seletor_app_phone_connect"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/app_phone_connect_name"
	                    style="@style/tx_app_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/settings_item_rear_mute"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/tx_app_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/selector_settings_item_rear_mute"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/settings_item_rear_mute_name"
	                    style="@style/tx_app_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/app_car_life"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/tx_app_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/seletor_app_car_life"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/app_car_life_name"
	                    style="@style/tx_app_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/app_settings"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/tx_app_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/seletor_app_settings"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/app_settings_name"
	                    style="@style/tx_app_text_style"
	                     />
	            </FrameLayout>
	        </LinearLayout>
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#006a76a7"
	        android:orientation="horizontal"
	        android:layout_gravity="bottom|center_horizontal"
	        android:gravity="center"
	        android:layout_marginLeft="4dp"
	        android:layout_marginRight="4dp" 
	         >
	        <TextView
	            android:id="@+id/prev"
	            android:text="@string/main_control_btn_text_prev"
	           	style="@style/BottomBarTextStyle"
	            />
	        <TextView 
				android:id="@+id/pause"
	            android:background="@drawable/selector_control_btn_bg"
	            android:text="@string/main_control_btn_text_pause"
	           	style="@style/BottomBarTextStyle"
	           	android:enabled="true"
	            />
	        <TextView 
				android:id="@+id/play"
	            android:text="@string/main_control_btn_text_play"
	           	style="@style/BottomBarTextStyle"
	           	android:visibility="gone"
	            /> 
	        <TextView 
	            android:id="@+id/next"
	            android:text="@string/main_control_btn_text_next"
	           	style="@style/BottomBarTextStyle"
	           	android:enabled="false"
	            />
	       
	        <FrameLayout
	            android:id="@+id/btn_mute"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:layout_width="0dp"
	            android:layout_marginLeft="4dp"
	            android:layout_marginRight="4dp"
	            android:background="@drawable/selector_control_btn_bg">
	            <com.tuoxianui.view.MuteTextView
	                android:id="@+id/btn_mute_state"
					android:layout_height="wrap_content"
		           	android:layout_width="wrap_content"
		           	android:layout_gravity="center"
		           	android:gravity="center"
		           	android:text="@string/main_control_btn_text_mute"
		           	android:background="@drawable/selector_btn_mute_bg" 
		           	android:textColor="@color/mute_color"
		           	android:textSize="@dimen/default_text2_size" 
	                />
	        </FrameLayout>
	        
	         <TextView 
	            android:id="@+id/desktop "
	            android:text="@string/desktop"
	           	style="@style/BottomBarTextStyle"
	           	android:enabled="true"
	           	android:visibility="gone"
	            />
	         <TextView 
	            android:id="@+id/test"
	            android:text="@string/test"
	           	style="@style/BottomBarTextStyle"
	           	android:enabled="true"
	           	android:visibility="gone"
	            />
	    </LinearLayout>
	</FrameLayout>
</LinearLayout>