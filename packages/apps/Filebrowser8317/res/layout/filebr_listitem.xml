<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@xml/selector_listview_state"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/listmode_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/textview_left_margin"
        android:layout_marginRight="@dimen/textview_right_margin"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter" >
    </ImageView>

    <TextView
        android:id="@+id/listmode_foldername"
        style="@style/mmp_listmode_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/list_item_textview_line1_size" >
    </TextView>

</LinearLayout>