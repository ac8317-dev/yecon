<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="480dp"
    android:layout_height="240dp"
    android:background="@drawable/dialog_bg"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp"
     >    
	<RelativeLayout 
	    android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
	    >
	    <TextView
		    android:id="@+id/textview_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_centerInParent="true"
	        android:textColor="@color/white"
	        android:textSize="@dimen/textsize_general" />
	    
	</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal"
         >
        <TextView
            android:id="@+id/textview_yes"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_control_btn_bg"
            android:gravity="center"
            android:text="@string/other_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_general" />
        
        <TextView
            android:id="@+id/textview_no"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:background="@drawable/selector_control_btn_bg"
            android:gravity="center"
            android:text="@string/other_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_general"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>