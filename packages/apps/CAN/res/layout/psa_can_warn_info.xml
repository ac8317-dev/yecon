<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/can_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/fuel_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dps_psa_margintop"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/psa_tv_warn_type"
                android:layout_marginLeft="@dimen/dps_psa_marginleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_curfuel_size" />

            <TextView
                android:id="@+id/psa_tv_warn_num_type"
                android:layout_marginLeft="@dimen/dps_psa_marginleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_curfuel_size" />

            <TextView
                android:id="@+id/psa_tv_warn_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_curfuel_size" />
        </LinearLayout>

        <ListView
            android:id="@+id/psa_list_warn_info"
            android:layout_marginTop="@dimen/dps_psa_margintop"
            android:listSelector="#00000000"
            android:layout_width="match_parent"
            android:layout_height="370dp" >
        </ListView>
    </LinearLayout>

</FrameLayout>