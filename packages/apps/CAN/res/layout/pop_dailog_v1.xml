<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_prompt_bk"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/pop_dailog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tx_curfuel_trip_padding"
        android:gravity="center"
        android:textSize="@dimen/tx_default_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/pop_dailog_list_info"
            android:layout_width="@dimen/list_default_width"
            android:layout_height="@dimen/tx_hisfuel_progress_width"
            android:divider="@null"
            android:drawSelectorOnTop="false"
            android:visibility="visible" >
        </ListView>
    </LinearLayout>

</LinearLayout>