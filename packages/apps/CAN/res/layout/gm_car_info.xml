<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <Button
        android:id="@+id/gm_btn_car_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/toyota_btn_menu_carset"
        android:text="@string/str_gm_car_set"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tx_default_size" />

    <Button
        android:id="@+id/gm_btn_air_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/toyota_btn_menu_curfuel"
        android:text="@string/str_gm_air_set"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tx_default_size" />

    <Button
        android:id="@+id/gm_btn_on_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/toyota_btn_menu_hisfuel"
        android:text="@string/str_gm_on_star"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tx_default_size" />
    </LinearLayout>
    

</RelativeLayout>