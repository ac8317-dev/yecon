<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/layout_hybrid_dev"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" 
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_tx_hybrid_nodev"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tx_curfuel_size" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_hybrid_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toyota_hybrid_bg" >

            <ImageView
                android:id="@+id/toyota_hybrid_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="15dp"
                android:contentDescription="@null"
                android:src="@drawable/toyota_hybrid_battery_0" />

            <ImageView
                android:id="@+id/toyota_hybrid_grend_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="80dp"
                android:layout_marginTop="33dp"
                android:contentDescription="@null"
                android:src="@drawable/toyota_hybrid_grend_right"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/toyota_hybrid_grend_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="80dp"
                android:layout_marginTop="33dp"
                android:contentDescription="@null"
                android:src="@drawable/toyota_hybrid_grend_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/toyota_hybrid_grend_ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@null"
                android:scaleType="center"
                android:src="@drawable/toyota_hybrid_grend_v"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/toyota_hybrid_red_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="22dp"
                android:contentDescription="@null"
                android:scaleType="center"
                android:src="@drawable/toyota_hybrid_red_v"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/toyota_hybrid_red_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="190dp"
                android:contentDescription="@null"
                android:scaleType="center"
                android:src="@drawable/toyota_hybrid_red_right"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>