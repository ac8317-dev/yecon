<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btn_dz7_driving_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/dz7_btn_menu_left" />

            <TextView
                android:id="@+id/tx_dz7_driving_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/str_dz7_driving_since_start"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_curfuel_trip_padding1" />

            <Button
                android:id="@+id/btn_dz7_driving_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/dz7_btn_menu_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_driving_height"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/tx_curfuel_trip_padding1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/tx_hisfuel_progress_width1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_dz7_carset_mfd_avgfuel"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/tx_curfuel_size" />

                    <TextView
                        android:id="@+id/tx_dz7_driving_avg_fuel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/tx_curfuel_trip_padding"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/tx_default_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/tx_curfuel_trip_padding1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/tx_hisfuel_progress_width1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_dz7_carset_mfd_avgspeed"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/tx_curfuel_size" />

                    <TextView
                        android:id="@+id/tx_dz7_driving_avg_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/tx_curfuel_trip_padding"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/tx_default_size" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/tx_curfuel_trip_padding1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/tx_hisfuel_progress_width1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_dz7_carset_mfd_traveldis"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/tx_curfuel_size" />

                    <TextView
                        android:id="@+id/tx_dz7_driving_rundis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/tx_curfuel_trip_padding"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/tx_default_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/tx_curfuel_trip_padding1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/tx_hisfuel_progress_width1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_dz7_carset_mfd_traveltime"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/tx_curfuel_size" />

                    <TextView
                        android:id="@+id/tx_dz7_driving_runtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/tx_curfuel_trip_padding"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/tx_default_size" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_driving_line_height"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/dz7_carline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/blue" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/tx_curfuel_trip_padding"
        android:paddingRight="@dimen/tx_curfuel_trip_padding"
        android:paddingTop="@dimen/tx_curfuel_trip_padding" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/tx_curfuel_trip_padding" >

            <TextView
                android:id="@+id/tx_dz7_driving_curfuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/str_dz7_carset_mfd_curfuel"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_curfuel_size" />

            <TextView
                android:id="@+id/tx_dz7_driving_convs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/str_dz7_carset_mfd_convs"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_curfuel_size" />

            <TextView
                android:id="@+id/tx_dz7_driving_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/str_tx_curfuel_cruisingrange"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_curfuel_size" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>