<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fuel_bg"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="@dimen/tx_hisfuel_progress_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tx_curfuel_trip_padding"
        android:orientation="vertical"
        android:paddingLeft="@dimen/tx_curfuel_trip_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_tx_curfuel_averspeed"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tx_curfuel_size" />

        <TextView
            android:id="@+id/tx_curfuel_speed_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tx_curfuel_trip_padding"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tx_default_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_curfuel_trip_padding"
            android:text="@string/str_tx_curfuel_elapsedtime"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tx_curfuel_size" />

        <TextView
            android:id="@+id/tx_curfuel_elapsedtime_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tx_curfuel_trip_padding"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tx_default_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_curfuel_trip_padding"
            android:text="@string/str_tx_curfuel_cruisingrange"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tx_curfuel_size" />

        <TextView
            android:id="@+id/tx_curfuel_crutange_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tx_curfuel_trip_padding"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tx_default_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_curfuel_trip_padding1"
            android:background="@drawable/toyota_curfuel_lbg"
            android:orientation="horizontal" >

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_progress_width1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_width"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_progress_width1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_progress_width1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_progress_width1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_5"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_progress_width1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_6"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_progress_width1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_7"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_trip_padding"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_8"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_trip_padding"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_9"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_trip_padding"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_10"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_progress_width1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_11"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_progress_width1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_12"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_progress_width1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_13"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_progress_width1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_14"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_progress_width1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_15"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_progress_width1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/progress_curfuel_marginbottom"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_space"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tx_curfuel_min_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_tx_min_15"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_default_size" />

            <TextView
                android:id="@+id/tx_curfuel_min_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tx_hisfuel_progress_width1"
                android:text="@string/str_tx_min_10"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_default_size" />

            <TextView
                android:id="@+id/tx_curfuel_min_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tx_hisfuel_progress_width1"
                android:text="@string/str_tx_min_5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_default_size" />

            <TextView
                android:id="@+id/tx_curfuel_min_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tx_hisfuel_progress_width1"
                android:text="@string/str_tx_min_0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_default_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_curfuel_trip_padding"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_curfuel_2his"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/choose_btn"
                android:text="@string/str_btn_curfuel_2his"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_curfuel_size" />

            <Button
                android:id="@+id/btn_curfuel_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tx_curfuel_trip_padding1"
                android:background="@drawable/choose_btn"
                android:text="@string/str_btn_curfuel_clear"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_curfuel_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/tx_curfuel_progress_width" >

        <TextView
            android:id="@+id/tx_curfuel_min_uitl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tx_default_size" />

        <TextView
            android:id="@+id/tx_curfuel_pro_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_curfuel_progress_width"
            android:text="@string/str_tx_scale_a1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tx_default_size" />

        <TextView
            android:id="@+id/tx_curfuel_pro_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_curfuel_trip_padding2"
            android:text="@string/str_tx_scale_a2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tx_default_size" />

        <TextView
            android:id="@+id/tx_curfuel_pro_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_curfuel_trip_padding2"
            android:text="@string/str_tx_scale_a3"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tx_default_size" />

        <TextView
            android:id="@+id/tx_curfuel_pro_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_curfuel_trip_padding2"
            android:text="@string/str_tx_scale_a4"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tx_default_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_curfuel_trip_padding1"
            android:background="@drawable/toyota_curfuel_rbg"
            android:orientation="vertical" >

            <com.can.ui.draw.FuelProgressBar
                android:id="@+id/pb_curfuel_progress_bar_cur"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/tx_curfuel_trip_padding2"
                android:layout_height="@dimen/tx_curfuel_progress_height"
                android:layout_marginLeft="@dimen/tx_curfuel_trip_padding"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/toyota_progressbar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tx_curfuel_intanl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tx_curfuel_progress_width"
                android:text="@string/str_tx_mation"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tx_default_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>