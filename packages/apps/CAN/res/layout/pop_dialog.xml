<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_prompt_bk"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/tx_default_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/popwind_marginBottom"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/choose_dialog_button"
            android:gravity="center"
            android:text="@string/other_ok"
            android:textSize="@dimen/tx_default_size" />

        <TextView
            android:id="@+id/textview_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:background="@drawable/choose_dialog_button"
            android:gravity="center"
            android:text="@string/other_cancel"
            android:textSize="@dimen/tx_default_size" />
    </LinearLayout>

</LinearLayout>
