        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cq_rl_lightsensitivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_lightsensitivity" />

            <TextView style="@style/car_info_right_style" />
        </RelativeLayout>

        <!-- 恢复出厂设置 -->

        <TextView
            style="@style/car_info_style1"
            android:text="@string/str_gm_reset" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_gm_confirm_reset" />

            <TextView
                android:id="@+id/cq_btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"
                android:background="@drawable/selector_fuel_del"
                android:gravity="center"
                android:text="@string/str_gm_confirm"
                android:textColor="@color/selector_color_state"
                android:textSize="@dimen/textsize_general" />
        </RelativeLayout>
