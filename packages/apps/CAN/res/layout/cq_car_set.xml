        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_autokey" />

            <CheckBox
                android:id="@+id/cq_checkbox_autokey"
                style="@style/car_set_checkbox" />
        </RelativeLayout>

        <!-- 驾驶辅助 -->
        <TextView
            style="@style/car_info_style1"
            android:text="@string/str_cq_drive_assistance" />
        <RelativeLayout
            android:id="@+id/cq_rl_overspeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_overspeed" />
            <TextView style="@style/car_info_right_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cq_rl_alramvol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_alramvol" />

            <TextView style="@style/car_info_right_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cq_rl_powertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_powertime" />

            <TextView style="@style/car_info_right_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cq_rl_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_starttime" />

            <TextView style="@style/car_info_right_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cq_rl_steermode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_steermode" />

            <TextView style="@style/car_info_right_style" />
        </RelativeLayout>

        <!-- 车身附件 -->

        <TextView
            style="@style/car_info_style1"
            android:text="@string/str_cq_car_body" />

        <RelativeLayout
            android:id="@+id/cq_rl_remoteunlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
