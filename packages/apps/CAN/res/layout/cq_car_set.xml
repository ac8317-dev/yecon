<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_padding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 语言设置 -->

        <TextView
            style="@style/car_info_style1"
            android:text="@string/str_gm_lan" />

        <RelativeLayout
            android:id="@+id/cq_rl_lan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_gm_lan" />

            <TextView style="@style/car_info_right_style" />
        </RelativeLayout>

        <!-- 空调设置 -->

        <TextView
            style="@style/car_info_style1"
            android:text="@string/str_cq_air_set" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_compressor" />

            <CheckBox
                android:id="@+id/cq_checkbox_compressor"
                style="@style/car_set_checkbox" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cq_rl_cyclectrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_cyclectrl" />

            <TextView style="@style/car_info_right_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cq_rl_cozy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_cozy" />

            <TextView style="@style/car_info_right_style" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_anion_mode" />

            <CheckBox
                android:id="@+id/cq_checkbox_anion_mode"
                style="@style/car_set_checkbox" />
        </RelativeLayout>

        <!-- 座椅设置 -->

        <TextView
            style="@style/car_info_style1"
            android:text="@string/str_cq_seat_set" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_leftautoheat" />

            <CheckBox
                android:id="@+id/cq_checkbox_leftautoheat"
                style="@style/car_set_checkbox" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_rightautoheat" />

            <CheckBox
                android:id="@+id/cq_checkbox_rightautoheat"
                style="@style/car_set_checkbox" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_leftheatlv" />

            <TextView
                android:id="@+id/cq_btn_leftheatlv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"
                android:background="@drawable/selector_fuel_del"
                android:gravity="center"
                android:textColor="@color/selector_color_state"
                android:textSize="@dimen/textsize_general" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_rightheatlv" />

            <TextView
                android:id="@+id/cq_btn_rightheatlv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"
                android:background="@drawable/selector_fuel_del"
                android:gravity="center"
                android:textColor="@color/selector_color_state"
                android:textSize="@dimen/textsize_general" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
