        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_remotewind" />

            <CheckBox
                android:id="@+id/cq_checkbox_remotewind"
                style="@style/car_set_checkbox" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_frontwiper" />

            <CheckBox
                android:id="@+id/cq_checkbox_frontwiper"
                style="@style/car_set_checkbox" />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_rearwiper" />

            <CheckBox
                android:id="@+id/cq_checkbox_rearwiper"
                style="@style/car_set_checkbox" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_rearviewmirror" />

            <CheckBox
                android:id="@+id/cq_checkbox_rearviewmirror"
                style="@style/car_set_checkbox" />
        </RelativeLayout>
        <!-- 灯光控制 -->

        <TextView
            style="@style/car_info_style1"
            android:text="@string/str_cq_light_ctrl" />

        <RelativeLayout
            android:id="@+id/cq_rl_followtohome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <TextView
                style="@style/car_info_style"
                android:text="@string/str_cq_followtohome" />

            <TextView style="@style/car_info_right_style" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
