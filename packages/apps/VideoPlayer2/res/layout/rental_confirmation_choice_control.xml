<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:id="@+id/rental_confirmation_choice_control">


    <LinearLayout android:id="@+id/rental_confirmation_choice_view"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
                  
        <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    
            <TextView android:id="@+id/rental_confirmation_choice_info1"              
                    android:layout_width="500dp"    
                    android:layout_marginTop="20dp"       
                    android:layout_height="wrap_content" 
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:gravity="center"/>             

            <TextView android:id="@+id/rental_confirmation_choice_info2"                    
                    android:layout_width="500dp"    
                    android:layout_marginTop="20dp"       
                    android:layout_height="wrap_content" 
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:gravity="center"/>
        
        </LinearLayout>  
        
       
        <LinearLayout android:layout_width="500dp" 
                    android:layout_height="wrap_content" 
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">                      
                        
            <Button android:id="@+id/rental_confirmation_choice_ok" 
                    android:text="@string/OK"
                    android:layout_marginTop="20dp" 
                    android:layout_marginLeft="50dp"   
                    android:layout_marginBottom="40dp"                    
                    android:textSize="25dp" 
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:gravity="center"/>
                            
            <Button android:id="@+id/rental_confirmation_choice_cancel"
                    android:text="@string/Cancel"
                    android:layout_marginTop="20dp" 
                    android:layout_marginLeft="100dp"   
                    android:layout_marginBottom="40dp"                        
                    android:textSize="25dp" 
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:gravity="center"/>
         
        </LinearLayout>              
       
    </LinearLayout>
    
                     
</RelativeLayout>
