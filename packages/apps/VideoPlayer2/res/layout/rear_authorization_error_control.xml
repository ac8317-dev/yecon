<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:id="@+id/rear_authorization_error_control">


    <LinearLayout android:id="@+id/rear_authorization_error_view"
                  android:orientation="vertical"
                  android:layout_width="wrap_content" 
                  android:layout_height="wrap_content">

            <TextView android:id="@+id/rear_authorization_error_info"
                 android:layout_width="500dp" 
                 android:layout_marginTop="20dp" 
                 android:layout_height="wrap_content"    
                 android:layout_centerHorizontal="true"           
                 android:textColor="#FFFFFF"
                 android:textSize="25dp"
                 android:gravity="center"/>

                         
            <Button android:id="@+id/rear_authorization_error_ok" 
                  android:text="@string/OK"
                  android:layout_marginTop="20dp" 
                  android:layout_marginBottom="20dp"                    
                  android:textSize="25dp" 
                  android:layout_width="150dp"
                  android:layout_height="60dp"
                  android:layout_centerHorizontal="true"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center"/>                         
       
    </LinearLayout>
    
                     
</RelativeLayout>
