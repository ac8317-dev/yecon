<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextViewListItemTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginRight">@dimen/space_view_left_margin</item>
        <item name="android:textSize">@dimen/list_item_textview_line2_size</item>
        <item name="android:textColor">@color/tv_list_line2_color</item>
    </style>

    <style name="BottomBarBtnTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/tv_press_color</item>
        <item name="android:textSize">@dimen/bottom_bar_textview_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_tab_bg</item>
        <item name="android:drawablePadding">@dimen/bottom_bar_drawable_padding</item>
    </style>

    <style name="TimeTextViewTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/time_textview_textsize</item>
        <item name="android:text">@string/default_duration_time</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@null</item>
        <item name="android:drawSelectorOnTop">false</item>
    </style>

    <style name="SpaceViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginBottom">@dimen/space_view_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/space_view_left_margin</item>
        <item name="android:layout_marginRight">@dimen/space_view_left_margin</item>
        <item name="android:layout_marginTop">@dimen/space_view_top_margin</item>
        <item name="android:background">@drawable/horizontal_seperator_line</item>
    </style>

    <style name="panel_button_text">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/selector_bt_panel</item>
    </style>

    <style name="dialog_panel" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="LayoutScanTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center</item>
    </style>

</resources>