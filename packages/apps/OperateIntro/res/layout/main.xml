            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.yecon.OperateIntro.HeaderLayout
                android:id="@+id/id_Contents_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                OperateIntro:item_hintTitle="@string/app_name"
                OperateIntro:item_stytle="0"
                OperateIntro:item_subTitle="@string/app_name" />

            <com.yecon.OperateIntro.HeaderLayout
                android:id="@+id/id_Contents_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                OperateIntro:item_stytle="0" />

            <com.yecon.OperateIntro.HeaderLayout
                android:id="@+id/id_Contents_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                OperateIntro:item_stytle="0" />

            <com.yecon.OperateIntro.HeaderLayout
                android:id="@+id/id_Contents_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                OperateIntro:item_stytle="0" />

            <com.yecon.OperateIntro.HeaderLayout
                android:id="@+id/id_Contents_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                OperateIntro:item_stytle="0" />

            <com.yecon.OperateIntro.HeaderLayout
                android:id="@+id/id_Contents_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                OperateIntro:item_stytle="0" />

            <com.yecon.OperateIntro.HeaderLayout
                android:id="@+id/id_Contents_6"
