                OperateIntro:item_stytle="0" />

            <com.yecon.OperateIntro.HeaderLayout
                android:id="@+id/id_Contents_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                OperateIntro:item_stytle="0" />

            <com.yecon.OperateIntro.HeaderLayout
                android:id="@+id/id_Contents_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                OperateIntro:item_stytle="0" />

            <com.yecon.OperateIntro.HeaderLayout
                android:id="@+id/id_Contents_13"
                android:layout_width="wrap_content"
