<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:carsetting="http://schemas.android.com/apk/res/com.yecon.carsetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    >
    <com.tuoxianui.view.TopBar
	    android:id="@+id/topbar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    app:top_title="@string/settings_item_data_time_name"
	    />
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="@color/black"
	    android:paddingTop="8dp"
	    android:paddingLeft="16dp"
	    android:paddingRight="16dp"  
	    android:paddingBottom="0dp"
	     >
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
			<LinearLayout 
			    android:id="@+id/header_layout_list"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    >
			     <com.yecon.carsetting.view.HeaderLayout
		            android:id="@+id/set_datetime_clock"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            carsetting:item_style="1"
		            carsetting:item_subTitle="@string/set_datetime_clock" />
	
		
		        <com.yecon.carsetting.view.HeaderLayout
		            android:id="@+id/set_datetime_gps_syc"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:visibility="gone"
		            carsetting:item_style="2"
		            carsetting:item_subTitle="@string/set_datetime_gps_syc" />
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:gravity="center_vertical"
				    android:visibility="invisible"
				    >
				    <com.yecon.carsetting.view.HeaderLayout
			            android:id="@+id/set_datetime_24hours"
			            android:layout_width="0dp"
			            android:layout_weight="1"
			            android:layout_height="wrap_content"
			            carsetting:item_style="2"
			            carsetting:item_subTitle="@string/set_datetime_24hours" />
				    <View 
				        android:layout_height="1dp"
				        android:layout_width="8dp"
				        />
				    <com.yecon.carsetting.view.HeaderLayout
			            android:id="@+id/set_datetime_zone"
			            android:layout_width="0dp"
			            android:layout_weight="1"
			            android:layout_height="wrap_content"
			            carsetting:item_style="3"
			            carsetting:item_subTitle="@string/set_datetime_zone" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:gravity="center"
			    >
			    <LinearLayout 
	                android:layout_width="286px"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                >
	                <TextView 
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="102"
	                    android:textColor="@color/white"
	                    android:textSize="22sp"
	                    android:gravity="center"
	                    android:text="@string/setting_year"
	                    />
	                <TextView 
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="84"
	                    android:textColor="@color/white"
	                    android:textSize="22sp"
	                    android:gravity="center"
	                    android:text="@string/setting_month"
	                    />
	                <TextView 
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="98"
	                    android:textColor="@color/white"
	                    android:textSize="22sp"
	                    android:gravity="center"
	                    android:text="@string/setting_day"
	                    />
	            </LinearLayout>
	            
				<LinearLayout 
	                android:layout_width="128px"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_marginLeft="48dp"
	                >
	                <TextView 
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="1"
	                    android:textColor="@color/white"
	                    android:textSize="20sp"
	                    android:gravity="center"
	                    android:text="@string/setting_hour"
	                    />
	                <TextView 
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="1"
	                    android:textColor="@color/white"
	                    android:textSize="20sp"
	                    android:gravity="center"
	                    android:text="@string/setting_minute"
	                    />
	            </LinearLayout>
			</LinearLayout>
	        <RelativeLayout
	            android:id="@+id/set_datetime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal">
				
	            <com.yecon.carsetting.view.MyDatePicker
	                android:id="@+id/datepicker"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/datepicker_bk2"
	                android:calendarViewShown="false"
	                android:saveEnabled="true"
	                android:scrollbarSize="5sp" />
	            <TimePicker
	                android:id="@+id/timepicker"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="50dp"
	                android:layout_toRightOf="@+id/datepicker"
	                android:background="@drawable/timepicker_bk2"
	                android:saveEnabled="true"
	                android:scrollbarSize="5sp" />
				
	        </RelativeLayout>
	    </LinearLayout>
	
	</ScrollView>
     <LinearLayout
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_gravity="center"
       android:orientation="horizontal"
       >
       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_weight="1"
           android:layout_gravity="center_vertical"
           android:gravity="center_vertical"
           android:textColor="@color/white"
           android:layout_marginRight="16dp"
           android:textSize="20dp"
           android:text="@string/show_time" />
       <Switch
           android:layout_gravity="center_vertical"
           android:id="@+id/showtime_Switch"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textOff="@string/off"
           android:textOn="@string/on"
           android:switchMinWidth="80dp"
           android:thumbTextPadding="10dp"
           android:track="@drawable/selector_switch_track_40"
           android:thumb="@drawable/switch_point_40"
           android:checked="false"
           />
   </LinearLayout>
	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#00fa76a7"
	        android:orientation="horizontal"
	        android:layout_gravity="bottom|center_horizontal"
	        android:gravity="center"
	        android:paddingTop="10dp"
		    android:paddingLeft="16dp"
		    android:paddingRight="16dp"
		    android:paddingBottom="@dimen/settings_btn_margin_bottom"
	         >
		    <TextView
	            android:id="@+id/back"
	            style="@style/BottomBarTextStyle"
	            android:contentDescription="@string/str_btn_back"
	            android:text="@string/str_btn_back" />
		    <TextView
		        android:layout_weight="3"
	            style="@style/BottomBarTextStyle"
	            android:contentDescription="@null"
	            android:visibility="invisible"
	             />
	</LinearLayout>
</LinearLayout>