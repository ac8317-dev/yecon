<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    >
    <com.tuoxianui.view.TopBar
	    android:id="@+id/topbar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    app:top_title="@string/settings"
	    />
	<FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:paddingTop="10dp"
	    android:paddingLeft="16dp"
	    android:paddingRight="16dp"
	    android:paddingBottom="@dimen/settings_btn_margin_bottom"
	    >
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="250dp"
	        android:background="#003e33e3"
	        android:orientation="vertical"
	        android:layout_marginTop="20dp"
	        >
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            >
	            <FrameLayout
	                android:id="@+id/settings_item_file_manager"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/settings_item_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/selector_settings_item_file_manager"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/settings_item_file_manager_name"
	                    style="@style/settings_item_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/settings_item_data_time"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/settings_item_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/selector_settings_item_data_time"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/settings_item_data_time_name"
	                    style="@style/settings_item_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/settings_item_light"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/settings_item_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/selector_settings_item_light"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/settings_item_light_name"
	                    style="@style/settings_item_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/settings_item_sound_balance"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/settings_item_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/selector_settings_item_sound_balance"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/settings_item_sound_balance_name"
	                    style="@style/settings_item_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/settings_item_sound_config"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/settings_item_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/selector_settings_item_sound_config"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/settings_item_sound_config_name"
	                    style="@style/settings_item_text_style"
	                     />
	            </FrameLayout>
	            
	        </LinearLayout>
	        <FrameLayout 
	            android:layout_height="@dimen/settings_item_wrap_between_gap"
	            android:layout_width="match_parent"
	            ></FrameLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"  
	            android:orientation="horizontal"
	            >
	            <FrameLayout
	                 android:id="@+id/settings_item_wifi"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/settings_item_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/selector_settings_item_wifi"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/settings_item_wifi_name"
	                    style="@style/settings_item_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                android:id="@+id/settings_item_sound_recover_factroy"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/settings_item_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/selector_settings_item_recover_factroy"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/settings_item_recover_factroy_name"
	                    style="@style/settings_item_text_style"
	                     />
	            </FrameLayout>
	            <FrameLayout
	                 android:id="@+id/settings_item_language"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                style="@style/settings_item_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/selector_settings_item_language"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/settings_item_language_name"
	                    style="@style/settings_item_text_style"
	                     />
	            </FrameLayout>
	            
				<FrameLayout
	                android:id="@+id/settings_item_update"
	                style="@style/settings_item_wrap_style"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1" >

	                <ImageView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/selector_settings_item_update" />

	                <TextView
	                    style="@style/settings_item_text_style"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/settings_item_update" />
	            </FrameLayout>
	            
	            <FrameLayout
	                android:id="@+id/settings_item_sound_about"
	                style="@style/settings_item_wrap_style"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1" >

	                <ImageView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/selector_settings_item_about" />

	                <TextView
	                    style="@style/settings_item_text_style"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    android:text="@string/settings_item_about_name" />
	            </FrameLayout>

	            <FrameLayout
	                android:id="@+id/settings_item_rear_mute"
	                android:layout_height="match_parent"
	                android:layout_width="0dp"
	                android:layout_weight="1"
			android:visibility="gone"
	                style="@style/settings_item_wrap_style"
	                 >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top|center_horizontal"
	                    android:src="@drawable/selector_settings_item_rear_mute"
	                    />
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom|center_horizontal"
	                    style="@style/settings_item_text_style"
	                    android:text="@string/settings_item_rear_mute_name"
	                     />
	            </FrameLayout>
	        </LinearLayout>
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#00fa76a7"
	        android:orientation="horizontal"
	        android:layout_gravity="bottom|center_horizontal"
	        android:gravity="center"
	         >
		    <TextView
	            android:id="@+id/back"
	            style="@style/BottomBarTextStyle"
	            android:contentDescription="@string/str_btn_back"
	            android:text="@string/str_btn_back" />
		    <TextView
		        android:layout_weight="3"
	            style="@style/BottomBarTextStyle"
	            android:contentDescription="@null"
	            android:text="@string/str_btn_back"
	            android:visibility="invisible"
	             />
		   
		</LinearLayout>
	</FrameLayout>
</LinearLayout>