<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
	<com.tuoxianui.view.TopBar
	    android:id="@+id/topbar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    app:top_title="@string/settings_item_light_name"
	    />
	<FrameLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="@color/black"
	    android:paddingTop="10dp"
	    android:paddingLeft="16dp"
	    android:paddingRight="16dp"
	    android:paddingBottom="@dimen/settings_btn_margin_bottom"
	    >
	    <com.yecon.carsetting.view.MyRadioGroup
	        android:id="@+id/radioGroup" 
	        android:contentDescription="@string/light_lightness_title" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_gravity="center"
	        android:layout_marginBottom="40dp"
	        >
	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:orientation="vertical"
	            android:gravity="center"
	            >
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
			        android:id="@+id/img_light_level_1" 
	                android:src="@drawable/img_light_level_1"
	                android:contentDescription="@string/str_light_level_1"
	                />
			    <RadioButton 
			        android:layout_width="wrap_content" 
			        android:layout_height="wrap_content" 
			        android:id="@+id/light_level_1" 
			        android:button="@drawable/selector_settings_light_level_check"
			        />
			    <TextView 
			        style="@style/settings_light_item_text_style"
			        android:text="@string/str_light_level_1"
		        />
		    </LinearLayout>
		    <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:orientation="vertical"
	            android:gravity="center"
	            >
			    <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/img_light_level_2"
			        android:id="@+id/img_light_level_2" 
	                android:contentDescription="@string/str_light_level_2"
	                />
			    <RadioButton 
			        android:layout_width="wrap_content" 
			        android:layout_height="wrap_content"
			        android:id="@+id/light_level_2"
			        android:button="@drawable/selector_settings_light_level_check"
			         />
			    <TextView 
			        style="@style/settings_light_item_text_style"
			        android:text="@string/str_light_level_2"
		        />
		    </LinearLayout>
		    <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:orientation="vertical"
	            android:gravity="center"
	            >
			    <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/img_light_level_3"
			        android:id="@+id/img_light_level_3" 
	                android:contentDescription="@string/str_light_level_3"
	                />
			    <RadioButton 
			        android:layout_width="wrap_content" 
			        android:layout_height="wrap_content"
			        android:id="@+id/light_level_3"
			        android:checked="true"
			        android:button="@drawable/selector_settings_light_level_check"
			        />
			    <TextView 
			        style="@style/settings_light_item_text_style"
			        android:text="@string/str_light_level_3"
		        />
		    </LinearLayout>
		    <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:orientation="vertical"
	            android:gravity="center"
	            >
			    <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/img_light_level_4"
			        android:id="@+id/img_light_level_4" 
	                android:contentDescription="@string/str_light_level_4"
	                />
		        <RadioButton 
			        android:layout_width="wrap_content" 
			        android:layout_height="wrap_content"
			        android:id="@+id/light_level_4"
			        android:button="@drawable/selector_settings_light_level_check"
			         />
		        <TextView 
					style="@style/settings_light_item_text_style"
			        android:text="@string/str_light_level_4"
		        />
	        </LinearLayout>
	 	</com.yecon.carsetting.view.MyRadioGroup>
		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#00fa76a7"
	        android:orientation="horizontal"
	        android:layout_gravity="bottom|center_horizontal"
	        android:gravity="center"
	         >
		    <TextView
	            android:id="@+id/back"
	            style="@style/BottomBarTextStyle"
	            android:contentDescription="@string/str_btn_back"
	            android:text="@string/str_btn_back" />
		    <TextView
		        android:layout_weight="3"
	            style="@style/BottomBarTextStyle"
	            android:contentDescription="@null"
	            android:visibility="invisible"
	             />
		</LinearLayout>
	</FrameLayout>
</LinearLayout>